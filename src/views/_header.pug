header.header
  nav.nav.nav--tours
    a.nav__el(href="/") all tours 
  .heder__logo 
    img(src="/img/logo-white.png", alt="Natours logo")
  nav.nav.nav--user 
    if user
      a.nav__el.nav__el--logout Log out
      a(href="/me").nav__el
        img(src=`/img/users/${user.photo}`, alt=`${user.name} Photo`).nav__user-img
        span= user.name.split(' ')[0]
    else
      a(href="/login").link.nav__el Login
      a(href="#").link.nav__el.nav__el--cta Sign UP